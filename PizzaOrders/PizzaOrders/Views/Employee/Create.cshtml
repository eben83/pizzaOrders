@model PizzaOrders.Models.Employee

@{
    ViewData["Title"] = "Add Employee";
}

<form method="post" asp-action="Create">
    <div class="form-group text-center">
        <h1 class="display-4">Create Employee</h1>
    </div>
    
    <div class="col-8 mx-auto pt-5">
        <div>
            <div class="form-group row">
                <div class="col-4">
                    @*TAG HELPER- label*@
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control">
                </div>
                    </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Department"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Department" class="form-control">
                </div>
            </div>
            <div class="form-group row d-flex justify-content-around">
                <div class="d-flex ">
                    <input type="submit" value="Create" class="btn btn-primary w-100 mr-5"/>
                    <a asp-action="Index" class="btn btn-primary text-white w-100" >Back</a>
                </div>
            </div>
        </div>
    </div>
</form>