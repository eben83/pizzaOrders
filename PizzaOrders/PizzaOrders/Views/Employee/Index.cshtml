@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Employee Page";
}

<div class="text-center">
    <h1 class="display-4">Employee List - @Model.Count()</h1>
    
    <div class="flex-row">
        <div class="justify-content-between">
            <a asp-controller="Employee" asp-action="Create">
                <div class="btn btn-primary">Add Employee</div>
            </a>
        </div>
    </div>
</div>
@if (Model.Count() > 0)
{
    <div class="container">
        <div class="d-flex justify-content-center flex-wrap">
                @foreach (var item in Model)
                {
                    <div class="card m-5" style="width: 18rem">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name - @item.EmployeeId</h5>
                            <div class="card-text">@item.Department</div>
                            <div class="d-flex justify-content-center">
                                @*Tag Helper ASP-ROUTE-ID, passes in the ID to be edited or deleted*@
                                <a asp-controller="Employee" asp-action="Edit" asp-route-Id="@item.EmployeeId">
                                    <div class="btn btn-primary mx-2">Edit</div>
                                </a>
                                <a asp-controller="Employee" asp-action="Delete" asp-route-Id="@item.EmployeeId">
                                    <div class="btn btn-danger mx-2">Delete</div>
                                </a>
                            </div>
                        </div>
                    </div>
                }
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="text-center mt-4">
            <h1 class="text-danger">There are no Employee's added yet</h1>
        </div>
    </div>
}