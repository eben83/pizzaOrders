@model PizzaOrders.Models.Order;

@{
    ViewData["Title"] = "Add Order";
}

<form method="post" asp-action="Create">
     <div class="form-group text-center">
            <h1 class="display-4">Place Your Order!</h1>
        </div>
    
    <div class="col-8 mx-auto pt-5">
        <div>
            <div class="form-group row">
                <div class="col-4">
                    @*TAG HELPER- label*@
                    <label asp-for="DateTime"></label>
                    <input asp-for="DateTime" />
                </div>
            </div>
            <div class="form-group row">

                <div class="col-4">
                    @*TAG HELPER- label*@
                    <label asp-for="Employee"></label>
                </div>
                <div class="col-8">
                    @*@Html.DropDownList("Test", new SelectList(ViewBag.data, "EmployeeId", "Name"))*@
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Pizza"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Pizza" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Drink"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Drink" class="form-control">
                </div>
            </div>
            <div class="form-group row d-flex justify-content-around">
                <div class="d-flex ">
                    <input type="submit" value="Create" class="btn btn-primary w-100 mr-5"/>
                </div>
            </div>
        </div>
    </div>
</form>