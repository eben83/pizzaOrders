@model PizzaOrders.Models.Employee

@{
    ViewData["Title"] = "Delete";
}
@*
    asp-action is a optional field
    if the method matches the method and the names match 
    you are able to leave the asp-action out
*@
<form method="post" >
    <div class="form-group text-center">
        <h1 class="display-4">Delete Employee</h1>
    </div>
    
    <div class="col-8 mx-auto pt-5">
        <div>
            @*add in the ID so that is also passed into the form but hidden*@
            <input asp-for="EmployeeId" hidden />
            <div class="form-group row">
                <div class="col-4">
                    @*TAG HELPER- label*@
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control"/>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Department"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Department" class="form-control">
                </div>
            </div>
            <div class="form-group row d-flex justify-content-around">
                <div class="d-flex ">
                    <input type="submit" value="Delete" class="btn btn-danger w-100 mr-5"/>
                    <a asp-action="Index" class="btn btn-primary text-white w-100">Back</a>
                </div>
            </div>
        </div>
    </div>
</form>