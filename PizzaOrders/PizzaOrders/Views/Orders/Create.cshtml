@model PizzaOrders.Models.Orders;

@{
    ViewBag.Title = "Order";
}

    <div class="form-group text-center">
        <h1 class="display-4">Place Your Orders!</h1>
    </div>


<div class="col-8 mx-auto pt-5">
        <div>
            <div class="form-group row">
                <div class="col-4">
                    @*TAG HELPER- label*@
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    @* @foreach (var item in Model.Name) *@
                    @* { *@
                    <select asp-for="Name" class="form-control"></select>
                    @* } *@
                </div>
                    </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Pizza"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Pizza" class="form-control">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Drink"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Drink" class="form-control">
                </div>
            </div>
            <div class="form-group row d-flex justify-content-around">
                <div class="d-flex ">
                    <input type="submit" value="Create" class="btn btn-primary w-100 mr-5"/>
                </div>
            </div>
        </div>
    </div>
